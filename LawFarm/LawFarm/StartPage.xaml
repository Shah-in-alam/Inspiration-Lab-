<Page x:Class="LawFarm.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StartPage" Height="470" Width="775">

    <Grid Background="LightGreen" Margin="-300,-90,-295,-160">
        <Grid.RowDefinitions>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="83*"/>
        </Grid.RowDefinitions>

        <Image Source="Images/Main.jpg" Margin="360,43,356,24"/>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,5,0,0" Grid.Row="1">

            <TextBlock Text="Welcome to LawFarm"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Content="Login"
                        Width="130" Height="40"
                        Background="#444444"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Login_Click"
                        Margin="0,0,10,0"/>

                <Button Content="Sign Up"
                        Width="134" Height="40"
                        Background="#000000"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="SignUp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

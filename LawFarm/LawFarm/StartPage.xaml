<Page x:Class="LawFarm.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StartPage" Height="470" Width="775">

    <Page.Resources>
        <!-- Welcome Text Animation -->
        <Storyboard x:Key="WelcomeAnimation">
            <DoubleAnimation Storyboard.TargetName="WelcomeText"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="WelcomeText"
                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                             From="0.8" To="1"
                             Duration="0:0:0.8"/>

            <DoubleAnimation Storyboard.TargetName="WelcomeText"
                             Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                             From="0.8" To="1"
                             Duration="0:0:0.8"/>
        </Storyboard>

        <!-- Button Slide In -->
        <Storyboard x:Key="ButtonAnimation">
            <DoubleAnimation Storyboard.TargetName="ButtonPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1"
                             Duration="0:0:1" BeginTime="0:0:0.5"/>
            <DoubleAnimation Storyboard.TargetName="ButtonPanel"
                             Storyboard.TargetProperty="RenderTransform.(TranslateTransform.Y)"
                             From="40" To="0"
                             Duration="0:0:0.5" BeginTime="0:0:0.5"/>
        </Storyboard>
    </Page.Resources>

    <Grid Background="#E6F4EA" Loaded="Page_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hero Image -->
        <Image Source="Images/Main.jpg"
               Height="180"
               Stretch="UniformToFill"
               Margin="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"/>

        <!-- Welcome Section -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1" Margin="0,20,0,0">
            <!-- Welcome Text -->
            <TextBlock x:Name="WelcomeText"
                       Text="Welcome to Law Firm"
                       FontSize="28"
                       FontWeight="SemiBold"
                       FontFamily="Segoe UI"
                       Foreground="#2E3B55"
                       HorizontalAlignment="Center"
                       Opacity="0">
                <TextBlock.RenderTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Buttons -->
            <StackPanel x:Name="ButtonPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,25,0,0"
                        Opacity="0">
                <StackPanel.RenderTransform>
                    <TranslateTransform Y="40"/>
                </StackPanel.RenderTransform>

                <Button Content="Login"
                        Width="130" Height="42"
                        Background="#2E7D32"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,15,0"
                        Click="Login_Click"/>

                <Button Content="Sign Up"
                        Width="130" Height="42"
                        Background="#1565C0"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SignUp_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

<Page x:Class="LawFarm.LawerDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" Title="LawerDashboard" Height="680">

    <Grid Background="DarkSeaGreen" Width="835">
        <!-- Logout Button -->
        <Button Content="Logout" Width="80" Height="30" 
                Background="Red" Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Top" 
                Margin="0,10,10,0" Click="Logout_Click"/>

        <!-- Title -->
        <TextBlock Text="Welcome to Lawyer Dashboard!" 
                   FontSize="24" FontWeight="Bold" Foreground="DarkBlue" 
                   HorizontalAlignment="Center" Margin="0,55,0,60"/>

        <Image x:Name="ProfileImage"
               Source="Images/Main.jpg"
               Width="100" Height="100"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Margin="0,120,120,0"
               Visibility="Collapsed"/>

        <!-- Main Form Panel -->
        <StackPanel x:Name="FormPanel" Width="450" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,155,0,0">
            <TextBlock Text="Lawyer ID:" FontWeight="Bold"/>
            <TextBox x:Name="LawyerIdBox" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBox x:Name="FullNameBox" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Address:" FontWeight="Bold"/>
            <TextBox x:Name="AddressBox" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Contact Number:" FontWeight="Bold"/>
            <TextBox x:Name="ContactBox" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Categories:" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox x:Name="CategoryListBox" SelectionMode="Multiple" Height="100">
                <ListBoxItem Content="Criminal"/>
                <ListBoxItem Content="Civil"/>
                <ListBoxItem Content="Divorce"/>
                <ListBoxItem Content="Immigration"/>
                <ListBoxItem Content="Corporate"/>
                <ListBoxItem Content="Family Law"/>
                <ListBoxItem Content="Intellectual Property"/>
                <ListBoxItem Content="Employment"/>
            </ListBox>

            <Button Content="Submit Details" Height="35" Width="140" Background="#2E8B57" Foreground="White"
                    FontWeight="Bold" Margin="0,20,0,0" Click="SubmitDetails_Click"/>
        </StackPanel>

        <!-- Appointment Section -->
        <Grid x:Name="AppointmentSection" Visibility="Collapsed" Margin="20,200,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="17*"/>
                <RowDefinition Height="29*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="1.5*" />
            </Grid.ColumnDefinitions>

            <!-- Appointment List + Actions -->
            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,40,0" Grid.RowSpan="2">
                <TextBlock Text="Appointment Requests" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" Background="Gray"/>

                <ListView x:Name="AppointmentList" Height="200" Width="379" Background="LightCyan">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock Text="Description" FontWeight="Bold" FontSize="16" Margin="0,20,0,5"/>
                <TextBlock x:Name="AppointmentDescription"
                   Text="Select a date to view description."
                   Background="LightCyan" Padding="10" Height="80" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Accept" Width="100" Background="#A2D5AB" Margin="0,0,10,0" Click="AcceptAppointment_Click"/>
                    <Button Content="Decline" Width="100" Background="#E27D60" Click="DeclineAppointment_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Calendar Panel -->
            <Border Grid.Column="1" Background="#FFF9C4" Padding="10" CornerRadius="5" VerticalAlignment="Top" Height="355" Margin="40,20,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2">
                <StackPanel>
                    <TextBlock Text="Filter by Date" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <Calendar x:Name="AppointmentCalendar"
                      Width="265" Height="240"
                      SelectedDatesChanged="AppointmentCalendar_SelectedDatesChanged" RenderTransformOrigin="0.5,0.5">
                        <Calendar.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleX="-1.818"/>
                                <RotateTransform/>
                                <TranslateTransform X="3.968"/>
                            </TransformGroup>
                        </Calendar.RenderTransform>
                    </Calendar>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

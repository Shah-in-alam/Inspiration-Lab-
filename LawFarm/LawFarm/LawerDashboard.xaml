<Page x:Class="LawFarm.LawerDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" Title="LawerDashboard" Height="680" Width="840">

    <Grid Background="#F0F4F8" Margin="-195,0,0,-125">
        <!-- Top Bar -->
        <DockPanel Background="#2E7D32" Height="50" Margin="25,5,80,750">
            <TextBlock Text="Lawyer Dashboard"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="20,0,0,0"/>
            <Button Content="Logout"
                    Width="62" Height="30"
                    Background="#D32F2F" Foreground="White"
                    FontWeight="Bold" Margin="0,5,15,0"
                    DockPanel.Dock="Right"
                    Click="Logout_Click" RenderTransformOrigin="2.446,0.667"/>
        </DockPanel>

        <!-- Welcome Message -->
        <TextBlock Text="Welcome to Lawyer Dashboard!"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#1A237E"
                   HorizontalAlignment="Center"
                   Margin="0,60,0,0"
                   VerticalAlignment="Top"/>

        <!-- Profile Image -->
        <Image x:Name="ProfileImage"
               Source="Images/Main.jpg"
               Width="200" Height="200"
               HorizontalAlignment="Left"
               Margin="60,120,0,0"
               VerticalAlignment="Top"
               Visibility="Collapsed"
               Stretch="UniformToFill"
               ClipToBounds="True"
               ></Image>

        <!-- Form Panel -->
        <Border x:Name="FormPanel"
                Width="450"
                Background="White"
                BorderBrush="#B0BEC5"
                BorderThickness="1"
                CornerRadius="10"
                Padding="20"
                Margin="0,150,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top">
            <StackPanel>
                <TextBlock Text="Lawyer ID:" FontWeight="Bold"/>
                <TextBox x:Name="LawyerIdBox" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Full Name:" FontWeight="Bold"/>
                <TextBox x:Name="FullNameBox" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Address:" FontWeight="Bold"/>
                <TextBox x:Name="AddressBox" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Contact Number:" FontWeight="Bold"/>
                <TextBox x:Name="ContactBox" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Categories:" FontWeight="Bold" Margin="0,10,0,5"/>
                <ListBox x:Name="CategoryListBox" SelectionMode="Multiple" Height="100">
                    <ListBoxItem Content="Criminal"/>
                    <ListBoxItem Content="Civil"/>
                    <ListBoxItem Content="Divorce"/>
                    <ListBoxItem Content="Immigration"/>
                    <ListBoxItem Content="Corporate"/>
                    <ListBoxItem Content="Family Law"/>
                    <ListBoxItem Content="Intellectual Property"/>
                    <ListBoxItem Content="Employment"/>
                </ListBox>

                <Button Content="Submit Details"
                        Height="35"
                        Width="140"
                        HorizontalAlignment="Center"
                        Background="#388E3C"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,20,0,0"
                        Click="SubmitDetails_Click"/>
            </StackPanel>
        </Border>

        <!-- Appointment Section -->
        <Grid x:Name="AppointmentSection" Visibility="Collapsed" Margin="20,200,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Appointments List -->
            <StackPanel Grid.Column="0" Grid.RowSpan="2" Margin="0,0,40,0">
                <TextBlock Text="Appointment Requests"
                           FontWeight="Bold"
                           FontSize="18"
                           Foreground="#333"
                           Margin="0,0,0,10"/>

                <ListView x:Name="AppointmentList"
                          Height="200"
                          Width="379"
                          Background="#E3F2FD"
                          BorderBrush="#90CAF9">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                            <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <TextBlock Text="Description"
                           FontWeight="Bold"
                           FontSize="16"
                           Margin="0,20,0,5"/>
                <TextBlock x:Name="AppointmentDescription"
                           Text="Select a date to view description."
                           Background="#E3F2FD"
                           Padding="10"
                           Height="80"
                           TextWrapping="Wrap"
                           FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                    <Button Content="Accept"
                            Width="100"
                            Background="#4CAF50"
                            Foreground="White"
                            Margin="0,0,10,0"
                            FontWeight="Bold"
                            Click="AcceptAppointment_Click"/>
                    <Button Content="Decline"
                            Width="100"
                            Background="#EF5350"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="DeclineAppointment_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Calendar Panel -->
            <Border Grid.Column="2"
                    Background="#FFF9C4"
                    Padding="10"
                    CornerRadius="5"
                    VerticalAlignment="Top"
                    Height="355"
                    Margin="0,0,0,0">
                <StackPanel>
                    <TextBlock Text="Filter by Date"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="0,0,0,10"/>
                    <Calendar x:Name="AppointmentCalendar"
                              Width="265"
                              Height="240"
                              SelectedDatesChanged="AppointmentCalendar_SelectedDatesChanged"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

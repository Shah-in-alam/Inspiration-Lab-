<Page x:Class="LawFarm.ProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LawFarm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProgressPage" Background="#F0F4F8">

    <Grid>
        <!-- Top bar -->
        <DockPanel Background="#2E7D32" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Progress Dashboard"
               FontSize="20"
               FontWeight="Bold"
               Foreground="White"
               VerticalAlignment="Center"
               Margin="20,0,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="0,0,15,0" VerticalAlignment="Center">
                <Button Content="Lawyer Dashboard"
                Width="140" Height="30"
                Background="#1976D2"
                Foreground="White"
                FontWeight="Bold"
                Margin="0,0,10,0"
                Click="BackToDashboard_Click"/>

                <Button Content="Logout"
                Width="80" Height="30"
                Background="#D32F2F"
                Foreground="White"
                FontWeight="Bold"
                Click="Logout_Click"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Content Layout -->
        <Grid Margin="20,70,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Circle Section -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBlock Text="Progress"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2E3B55"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <Grid Width="200" Height="200">
                    <Ellipse Fill="#E0E0E0"/>
                    <TextBlock x:Name="ProgressText"
                               Text="0%"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#388E3C"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>

                <Slider x:Name="ProgressSlider"
                        Minimum="0" Maximum="100"
                        ValueChanged="ProgressSlider_ValueChanged"
                        Width="200"
                        Margin="0,20,0,0"/>
                <TextBlock x:Name="SuccessMessage"
                       Text="Congratulations!"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="Green"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"
                       HorizontalAlignment="Center"/>   
            </StackPanel>

            <!-- Chat Box Section -->
            <Border Grid.Column="2"
                    Background="White"
                    CornerRadius="8"
                    BorderBrush="#B0BEC5"
                    BorderThickness="1"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Chat History -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
                        <StackPanel x:Name="ChatHistory">
                            <!-- Chat messages will be dynamically added here -->
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Chat Input -->
                    <DockPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBox x:Name="ChatInput"
                                 Height="40"
                                 Margin="0,0,10,0"
                                 Padding="10"
                                 Width="109"
                                 DockPanel.Dock="Left"
                                 Background="DarkSeaGreen"
                                 BorderBrush="#B0BEC5"/>

                        <Button Content="Send"
                                Width="70"
                                Height="40"
                                Background="#1565C0"
                                Foreground="White"
                                FontWeight="Bold"
                                Click="SendMessage_Click"/>
                    </DockPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

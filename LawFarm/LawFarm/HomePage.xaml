<Page x:Class="LawFarm.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LawFarm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="White" Margin="0,0,0,-140">
        <!-- Navbar -->
        <local:Navbar HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <!-- Welcome Text -->
        <TextBlock Text="Welcome!" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="50" Margin="0,80,0,0"
               FontFamily="Georgia" Foreground="Purple" FontWeight="Bold"/>

        <!-- Top Rated Label -->
        <TextBlock Text="Top Rated" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="40" Margin="0,150,0,0"
               FontFamily="Georgia" Foreground="Black" FontWeight="Bold"/>

        <!-- Horizontal StackPanel for lawyers -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,130,0,0">

            <!-- Lawyer 1 -->
            <StackPanel Width="180" HorizontalAlignment="Center" Margin="20,0">
                <Border Width="150" Height="150" CornerRadius="75"
            ClipToBounds="True" BorderBrush="Gray" BorderThickness="2">
                    <Image Source="Images/New.jpg" Stretch="Fill" Width="130" Height="130"/>
                </Border>
                <TextBlock Text="Shahin Alam" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" TextAlignment="Center"/>
                <TextBlock Text="Rating: 98%" FontSize="14" Foreground="Green" TextAlignment="Center"/>
            </StackPanel>

            <!-- Lawyer 2 -->
            <StackPanel Width="180" HorizontalAlignment="Center" Margin="20,0">
                <Border Width="150" Height="150" CornerRadius="75"
            ClipToBounds="True" BorderBrush="Gray" BorderThickness="2">
                    <Image Source="Images/New.jpg" Stretch="Fill" Width="130" Height="130"/>
                </Border>
                <TextBlock Text="Ayesha Khan" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" TextAlignment="Center"/>
                <TextBlock Text="Rating: 95%" FontSize="14" Foreground="Green" TextAlignment="Center"/>
            </StackPanel>

            <!-- Lawyer 3 -->
            <StackPanel Width="180" HorizontalAlignment="Center" Margin="20,0">
                <Border Width="150" Height="150" CornerRadius="75"
            ClipToBounds="True" BorderBrush="Gray" BorderThickness="2">
                    <Image Source="Images/New.jpg" Stretch="Fill" Width="130" Height="130"/>
                </Border>
                <TextBlock Text="Tariq Islam" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" TextAlignment="Center"/>
                <TextBlock Text="Rating: 92%" FontSize="14" Foreground="Green" TextAlignment="Center"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>

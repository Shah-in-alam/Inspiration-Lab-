<Page x:Class="LawFarm.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LawFarm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="DarkSeaGreen" Margin="0,0,0,-140">

        <!-- Navbar -->
        <local:Navbar HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <!-- Welcome Text -->
        <TextBlock Text="Welcome!" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="50" Margin="0,80,0,0"
               FontFamily="Georgia" Foreground="Purple" FontWeight="Bold"/>

        <!-- Top Rated Label -->
        <TextBlock Text="Top Rated Lawyers" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="40" Margin="0,150,0,0"
               FontFamily="Georgia" Foreground="Black" FontWeight="Bold"/>
        <TextBlock TextWrapping="Wrap"
           FontSize="18"
           FontFamily="Segoe UI"
           Foreground="#2E3B55"
           Margin="0,210,0,265"
           TextAlignment="Center"
           HorizontalAlignment="Center"
           Width="700" FontWeight="SemiBold">
    Welcome to LawFirm — your trusted legal companion. Whether you're seeking expert legal advice, booking consultations, or reviewing lawyer services, LawFirm connects you with qualified professionals who care about your case. Explore, book, and manage your legal needs all in one place.
        </TextBlock>
        <!-- Horizontal StackPanel for lawyers -->
        <StackPanel x:Name="TopLawyersPanel" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,230,0,0">
            <!-- DYNAMIC LAWYERS WILL BE ADDED HERE FROM C# -->
        </StackPanel>

    </Grid>
</Page>

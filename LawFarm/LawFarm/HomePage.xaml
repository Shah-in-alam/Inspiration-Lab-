<Page x:Class="LawFarm.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LawFarm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid Background="DarkSeaGreen" Margin="0,0,0,-140">

        <!-- Navbar -->
        <local:Navbar HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

        <!-- Welcome Text -->
        <TextBlock Text="Welcome!" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="50" Margin="0,80,0,0"
               FontFamily="Georgia" Foreground="Purple" FontWeight="Bold"/>

        <!-- Top Rated Label -->
        <TextBlock Text="Top Rated" HorizontalAlignment="Center" VerticalAlignment="Top"
               FontSize="40" Margin="0,150,0,0"
               FontFamily="Georgia" Foreground="Black" FontWeight="Bold"/>

        <!-- Horizontal StackPanel for lawyers -->
        <StackPanel x:Name="TopLawyersPanel" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,230,0,0">
            <!-- DYNAMIC LAWYERS WILL BE ADDED HERE FROM C# -->
        </StackPanel>

    </Grid>
</Page>

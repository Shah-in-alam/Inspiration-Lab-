<Page x:Class="LawFarm.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LawFarm"
      mc:Ignorable="d" 
      d:DesignHeight="800" Width="640"
    Title="SignUpPage">

    <Grid Background="LightGreen" Margin="-350,-20,-390,-185">
        <Image Source="Images/Main.jpg" Margin="470,55,0,745" HorizontalAlignment="Left" Width="545"/>

        <Border Width="434" Padding="30" Background="White" CornerRadius="10" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                BorderBrush="#CCCCCC" BorderThickness="1" Height="400" Margin="458,200,0,0">
            <StackPanel>
                <TextBlock Text="Create an Account" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <TextBlock Text="Username" FontWeight="Bold" />
                <TextBox x:Name="UsernameBox" Height="30" Margin="0,0,0,10"/>
                <TextBlock Text="Email" FontWeight="Bold"/>
                <TextBox x:Name="EmailBox" Height="30" Margin="0,0,0,10"/>
                <TextBlock Text="Password" FontWeight="Bold" />
                <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>
                <Button Content="Submit" Width="140" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold" Click="Submit_Click"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Already have an account? " FontWeight="Bold"/>
                    <TextBlock><Hyperlink Click="LoginLink_Click" FontWeight="Bold">Login</Hyperlink></TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>

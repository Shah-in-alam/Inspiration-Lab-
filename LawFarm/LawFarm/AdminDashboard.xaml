<Page x:Class="LawFarm.AdminDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LawFarm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminDashboard">

    <Grid Background="LightGoldenrodYellow">
        <!-- Logout Button -->
        <Button Content="Logout" Width="80" Height="30" 
            Background="Red" Foreground="White" FontWeight="Bold"
            HorizontalAlignment="Right" VerticalAlignment="Top" 
            Margin="0,10,10,0"
            Click="Logout_Click"/>

        <!-- Main Content -->
        <StackPanel VerticalAlignment="Top" Margin="20,60,20,20">
            <TextBlock Text="Welcome to Admin Dashboard!" 
                   FontSize="24" FontWeight="Bold" Foreground="DarkGreen" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Users Section -->
            <TextBlock Text="Users" FontWeight="Bold" FontSize="18" Height="26" Width="405"/>
            <ListView x:Name="UsersList" Height="62" Margin="0,5,0,10"
                  DisplayMemberPath="Username" SelectionMode="Single" Width="410"/>
            <Button Content="Delete Selected User" Width="200" Height="30" Background="OrangeRed"
                Click="DeleteUser_Click" Margin="0,0,0,20"/>
            <TextBlock Text="Lawyers" FontWeight="Bold" FontSize="18" Height="32" Width="404" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="-0.102"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>

            <!-- Lawyers Section -->
            <ListView x:Name="LawyersList" Height="58" Margin="0,5,0,10"
                  DisplayMemberPath="FullName" SelectionMode="Single" Width="408"/>
            <Button Content="Delete Selected Lawyer" Width="200" Height="30" Background="OrangeRed"
                Click="DeleteLawyer_Click"/>
        </StackPanel>
    </Grid>

</Page>

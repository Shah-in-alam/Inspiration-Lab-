<Page x:Class="LawFarm.AdminDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LawFarm"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="AdminDashboard" Height="565">

    <Grid Background="#C9E4CA">
        <!-- Logout Button -->
        <Button Content="Logout" Width="80" Height="30"
                Background="Crimson" Foreground="#C9E4CA" FontWeight="Bold"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Margin="0,10,10,0"
                Click="Logout_Click" />

        <!-- Main Content Panel -->
        <StackPanel Margin="30,60,30,30" HorizontalAlignment="Center">
            <TextBlock Text="Admin Dashboard" 
                       FontSize="26" FontWeight="Bold" Foreground="Purple"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Users Section -->
            <GroupBox Header="Registered Users" FontWeight="Bold" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <ListView x:Name="UsersList" Height="100" DisplayMemberPath="Username" SelectionMode="Single"/>
                    <Button Content="Delete Selected User" Width="200" Height="30"
                            Background="#DC143C" Foreground="White"
                            HorizontalAlignment="Left" Margin="0,10,0,0"
                            Click="DeleteUser_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Lawyers Section -->
            <GroupBox Header="Registered Lawyers" FontWeight="Bold" Padding="10">
                <StackPanel>
                    <ListView x:Name="LawyersList" Height="100" DisplayMemberPath="FullName" SelectionMode="Single"/>
                    <Button Content="Delete Selected Lawyer" Width="200" Height="30"
                            Background="#DC143C" Foreground="White"
                            HorizontalAlignment="Left" Margin="0,10,0,0"
                            Click="DeleteLawyer_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>

</Page>
